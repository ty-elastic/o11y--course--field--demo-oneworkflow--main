# ------------- ONE WORKFLOW

docker pull us-central1-docker.pkg.dev/elastic-sa/tbekiares-demo/tbekiares-demo-aiassistantv2
docker run -d -p 9013:8080 us-central1-docker.pkg.dev/elastic-sa/tbekiares-demo/tbekiares-demo-aiassistantv2

echo "Initializing OneWorkflow"
init_one_workflow() {
    local http_status=$(curl -s -o /dev/null -w "%{http_code}" -X POST "$KIBANA_URL/internal/kibana/settings" \
    --header 'Content-Type: application/json' \
    --header "kbn-xsrf: true" \
    --header "Authorization: Basic $ELASTICSEARCH_AUTH_BASE64" \
    --header 'x-elastic-internal-origin: Kibana' \
    -d '{"changes":{"workflows:ui:enabled":true}}')

    if echo $http_status | grep -q '^2'; then
        echo "OneWorkflow successfully initialized: $http_status"
        return 0
    else
        echo "Failed to initialize OneWorkflow. HTTP status: $http_status"
        return 1
    fi
}
retry_command_lin init_one_workflow

docker pull $REPO/workflows:$INSTRUQT_TRACK_SLUG
docker run $REPO/workflows:$INSTRUQT_TRACK_SLUG --ai_proxy http://host-1:9013 --kibana_host $KIBANA_URL --es_host $ELASTICSEARCH_URL --es_authbasic $ELASTICSEARCH_AUTH_BASE64 load_workflows

docker run $REPO/workflows:$INSTRUQT_TRACK_SLUG --kibana_host $KIBANA_URL --es_host $ELASTICSEARCH_URL --es_authbasic $ELASTICSEARCH_AUTH_BASE64 load_alerts
